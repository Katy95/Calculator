<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DigitalBtnStyle">
        <item name="android:textSize">@dimen/my_size</item>
        <item name="android:textColor">@color/colorClearBtnPressed</item>
        <item name="android:background">@drawable/digital_bin_selector</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
    </style>
    <style name="ClearBtnStyle">
        <item name="android:textSize">@dimen/my_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/clear_btn_selector</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">@dimen/margin_left</item>
    </style>
    <style name="SignBtnStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/sign_btn_selector</item>
        <item name="android:layout_marginTop">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_left</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
    </style>
    <style name="ScreenStyle">
        <item name="android:textSize">@dimen/my_screensize</item>
        <item name="android:textColor">@color/colorSignBtnPressed</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <style name="AboutContentStyle">
        <item name="android:textColor">@color/colorSignBtnNormal</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">@dimen/my_margin</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
